<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" />

    <title>Sign Up</title>
    <link rel="stylesheet" href="/public/css/signupStyle.css">
    <script src="/public/js/auth.js" defer></script>
</head>

<body>
    <!-- FIX HEADER -->
    <navbar>
        <a class="appName" href="/">
            <i class="fas fa-music fa-treble-clef"></i>
        </a>

    </navbar>
    <h1 class="signUpTitle">Sign Up</h1>

    <div class="signUp">
        <div class="errorDisplay" id="errorDisplay"></div>
        <div class="subSignUp">
            <form action="/signup/user" id="signUpForm" method="post">
                <input type="text" class="user" id="username" name="username" placeholder="Enter your username"><br>
                <input type="email" class="userEmail" id="email" name="email" placeholder="Enter your email"><br>
                <input type="password" class="pass" id="password" name="password" placeholder="Enter your password"><br>
                <input type="password" class="reenterPass" name="reenterPass" id="reenterPass"
                    placeholder="Re-enter your password"><br>
                <button type="submit" class="signUpButton" id="signUpButton">Sign Up</button>
                <button type="button" class="redirectSignInButton" onclick="redirectSignIn()"
                    id="redirectSignInButton">Already have an account? Sign In</button>
                <button type="reset" class="resetButton" id="resetButton">Reset</button>
            </form>
        </div>

    </div>
</body>

</html>