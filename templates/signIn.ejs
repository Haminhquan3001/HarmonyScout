<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" />

    <title>Log In</title>
    <link rel="stylesheet" href="/public/css/signupStyle.css">
    <script src="/public/js/auth.js" defer></script>
</head>

<body>
    <navbar>
        <a class="appName" href="/">
            <i class="fas fa-music fa-treble-clef"></i>
        </a>

    </navbar>
    <h1 class="signInTitle">Log In</h1>
    <div class="signIn">
        <div class="errorDisplay" id="errorDisplay"></div>
        <div class="subSignIn">
            <form action="/signin/user" method="post" id="signInForm">
                <input type="text" class="user" id="username" name="username"
                    placeholder="Enter your username or email"><br>
                <input type="password" class="pass" id="password" name="password" placeholder="Enter your password"><br>
                <button type="submit" class="signInButton" id="signInButton">Log In</button>
                <button type="button" onclick="redirectToSignUp()" class="redirectToSignUpButton"
                    id="redirectToSignUpButton">Don't have an account? Sign Up!</button>
                <button type="reset" class="resetButton" id="resetButton">Reset</button>
            </form>
        </div>

    </div>
</body>

</html>